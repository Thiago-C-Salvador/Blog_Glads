<div class="card bg-dark" style="margin-top: 50px;">
    <div class = "card-body d-flex flex-column text-light mt-2">
        <h1 class="text-info">{{post.title}}</h1>
        <p>{{post.content}}</p>
        <hr class="border-2 border-warning">
        <small title="Todos post da categoria">Categoria: 
            {{#if user}} 
                <a role="link" class="alter_color_link" href="/category/filter_post_category/{{post.category.name}}/{{post.category._id}}">{{post.category.name}}</a>
            {{else}}
                {{post.category.name}}
            {{/if}}
        </small>
        <small>Data de publicação: {{formatDate post.date}}</small>
        {{#if admin}}
            <div class="d-flex">
                <a href="/admin/posts/editar/{{post._id}}"> <button class=" btn btn-success btn-sm mt-2 me-2">Editar post</button> </a>
                <form action="/admin/post/delete" method="POST">
                    <input type="hidden" name="id" value="{{post._id}}">
                    <button class=" btn btn-danger btn-sm mt-2" type="submit" ondblclick="confirmation()">Deletar Post</button>
                </form>
            </div>
        {{/if}}
    </div>  
</div>