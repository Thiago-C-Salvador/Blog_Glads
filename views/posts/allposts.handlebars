<h3 class="display-5 mb-3">Coleção completa</h3>
{{#each post}}
    <div class="card mb-3 bg-dark border-2 border-primary">
        <div class = "card-body d-flex flex-column text-light">
            <h4 class="text-info">{{title}}</h4>
            <p>{{description}}</p>
            <a href="/post/postagem/{{slug}}"><button type="button" class="btn btn-success btn-sm hover-text-button">Leia sobre</button></a>
            <hr class="border-2 border-warning">
            <small>Categoria: {{category.name}}</small>
            <small>Data de publicação: {{formatDate date}}</small>
        </div>
    </div>
{{else}}
    <div class="card  m-auto border-primary border-2 border-top-0 " style="width: 40rem;">
        <div class="d-flex flex-column align-items-center">
            <h4 class= "display-6" style="margin-bottom: 4px">Posts sobre {{catSelect.name}}</h4>
             <p class="lead"> Ainda não há post referente ao assunto.</p>
            <a class="mb-3"><button title="Voltar página" type="button" class="btn btn-success btn-sm mb-2 hover-text-button" role="button" href="javascript:void(0)" onclick="history.go(-1); return false;">Page back</button></a>
        </div>
    </div>
{{/each}}