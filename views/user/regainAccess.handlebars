<section class="d-flex align-items-center vh-100 wh-100">
    <main class="form-content bg-dark w-100 m-auto rounded-3">
        <div class="d-flex flex-column">
            <div id="id_div-img-back"></div>
            <div class="d-flex justify-content-center mb-2">
                <h1 class="h4 fw-bold text-info text-center me-2">Recuperar acesso</h1>
                <img src="/static/public/img/avatar.svg" alt="image avatar" title="image decoration" class="img-svg-avatar">
            </div>
        </div>
        <form action="/user/regain_access" method="POST" class="d-flex flex-column ">
            <div class="mb-2">
                <input type="text" class="input-form-access w-100" id="id_email" name="email" placeholder="your_email@dominio">
            </div>
                {{#each erro}}
                    <div class="alert alert-danger">{{text}}</div>
                {{else}}

                {{/each}}

                {{#if error}}
                    <div class="mt-1 text-center">
                        <label style="color:#fff;">** {{error}} **</label>
                    </div>
                {{/if}}

                {{>_msg}}
                
            <button type="submit" class="btn btn-sm btn-info w-100 hover-text-button" style="font-family:cursive; font-size:medium">Recuperar</button>
        </form>
    </main> 
</section>

<script src="/static/public/js/img.js" type="module"></script>